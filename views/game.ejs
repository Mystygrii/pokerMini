<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.blue.min.css" />
    <title>Document</title>
</head>

<body>
    <div class="container">
        <div class="grid">
            <% if(currentPlayer.name==='human' ) {%>
                <% for(key in players){ %>
                    <div class="'test">
                        <%= players[key].name %>
                            <p>balance : <%= players[key].balance %>
                            </p>
                    </div>
                    <%} %>
                        <div class="board">
                            <p>current turn : <%= currentTurn %>
                            </p>
                            <!-- Ajouter ici la div avec les mises des deux joueurs, et la div avec le pot -->
                        </div>
                        <%if(currentTurn === 'blind'){ %>
                        <form action="/play" method="post">
                            <input type="number" name="amount">
                            <button type="submit" name="action" value="bet">bet</button>
                            <button type="submit" name="action" value="raise" disabled="True">raise</button>
                            <button type="submit" name="action" value="call" disabled="True">call</button>
                            <button type="submit" name="action" value="check">check</button>
                            <button type="submit" name="action" value="fold">fold</button>
                        </form>
                        <%}else if(currentTurn === 'ante'){%>
                            <form action="/play" method="post">
                                <input type="number" name="amount">
                                <button type="submit" name="action" value="bet">bet</button>
                                <button type="submit" name="action" value="raise">raise</button>
                                <button type="submit" name="action" value="call">call</button>
                                <button type="submit" name="action" value="check">check</button>
                                <button type="submit" name="action" value="fold">fold</button>
                        <%}else if(currentTurn === 'showDown'){%>
                            <%    players.forEach((p)=>{ %>
                                hand : <%= p.name %> <br>
                                <%= p.hand[0].rank %>
                                <%= p.hand[0].Family %>
                                <%= p.hand[1].rank %>
                                <%= p.hand[1].Family %>
                                <%= p.hand[2].rank %>
                                <%= p.hand[2].Family %>
                                <br>
                                <br>
                            <%    }) %>

                            <%}%>

                        <%}else{%>
                            <div>
                                <p>waiting for bot</p>
                                <script>
                                    <!-- on regarde si le joueur change, et on rafraÃ®chit la page -->
                                    const id = setInterval(() => {
                                        fetch("/current-player")
                                            .then(res => res.json())
                                            .then(player => {
                                                if (player.name === "human") {
                                                    clearInterval(id)
                                                    location.reload()
                                                }
                                            })
                                    }, 500)
                                </script>
                            </div>
                            <%}%>
        </div>
    </div>
</body>

</html>